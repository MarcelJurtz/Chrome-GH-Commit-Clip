{
    "manifest_version": 3,
    "name": "GitHub Commit-Message Clipboard Extension",
    "description": "Extension to generate formatted commit message for any commit on GitHub",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "src/assets/icon.png"
    },
    "permissions": [
        "tabs", 
        "scripting",
        "notifications"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ]
}